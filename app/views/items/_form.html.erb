<div class="container my-5">
  <div class="row">
    <div class="card col-md-6 offset-md-3 p-5">
      <%= form_for @item do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, required: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, required: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :price %>
          <%= f.text_field :price, required: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image, required: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :category %>
          <%= f.select :category_id, options_for_select(Category.order(:position).map {|category| [category.title, category.id]}), {}, required: true, class: "form-control" %>
        </div>
        <%= f.submit "상품 등록", class: "btn btn-primary" %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <!-- <% hidden_field_tag :user_id, current_user.id%> -->
      <% end %>
    </div>
  </div>
</div>
