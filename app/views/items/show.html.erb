<div class="container my-5">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @item.image.url, class: "img-thumbnail img-fluid" %>
    </div>
    <div class="col-md-8">
      <h4><%= @item.title %></h4>
      <p><%= number_with_delimiter @item.price %>원</p>
      <%= link_to "찜하기", toggle_item_path(@item), class: "btn btn-primary" %>
      <%= link_to "구매하기", "", class: "btn btn-secondary" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-12">
      <%= simple_format @item.description %>
    </div>
  </div>
</div>
